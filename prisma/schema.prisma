generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Estado {
  PENDIENTE
  EN_PROGRESO
  COMPLETADO
}

enum Rol {
  ADMIN
  USUARIO
}
model Usuario {
  id         Int        @id @default(autoincrement())
  nombre     String
  email      String     @unique
  contrasena String
  rol        Rol
  proyectos  Proyecto[]
  tareas     Tarea[]    @relation("UsuarioTareas")
}

model Proyecto {
  id                 Int      @id @default(autoincrement())
  nombre             String
  descripcion        String
  fecha_inicio       DateTime
  fecha_finalizacion DateTime
  usuario_id         Int
  usuario            Usuario  @relation(fields: [usuario_id], references: [id])
  tareas             Tarea[]
}

model Tarea {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String
  estado      Estado
  proyecto_id Int
  proyecto    Proyecto @relation(fields: [proyecto_id], references: [id])
  asignada_a  Int
  usuario     Usuario  @relation("UsuarioTareas", fields: [asignada_a], references: [id])
}
